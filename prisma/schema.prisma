generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  avatar    String?
  history   userHistory[]
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model userHistory {
  id        String   @id @default(cuid())
  userId    String  
  user      User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
  tool      ToolType
  input     Json
  output    Json
  createdAt DateTime @default(now())

  @@index([createdAt])
}

enum ToolType{
  RESUME_ANALYZER
  ROADMAP_GENERATOR
  COVER_LETTER_GENERATOR
}
